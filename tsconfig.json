{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./src",
    "target": "es2016",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "paths": {
      "entities/*": ["entities/*"],
      "game/*": ["game/*"],
      "room/*": ["room/*"],
      "@wizards/common": ["../common/src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
